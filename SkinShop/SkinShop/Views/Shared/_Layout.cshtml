<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Inria+Serif%7CMa+Shan+Zheng%7COswald&display=swap" rel="stylesheet">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/SkinShopCSS/Layout.css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/scripts/jquery-3.3.1.min.js")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
    <link rel="stylesheet" href="~/Content/ScriptsSkinShop/fm.revealator.jquery.css">
    <script src="~/Content/ScriptsSkinShop/fm.revealator.jquery.js"></script>
    <script src="~/Content/ScriptsSkinShop/jquery-1.11.3.min.js"></script>
</head>
<body class="main">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SkinSForever", "Main", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Скины", "Index", "Home")</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("user"))
                        {
                            <li>@Html.ActionLink("Заказы", "Orders", "Client")</li>
                            <li>@Html.ActionLink("Корзина", "Basket", "Client")</li>
                            <li>@Html.ActionLink("Избранное", "Favorites", "Client")</li>
                        }
                        else if (User.IsInRole("manager"))
                        {
                            <li>@Html.ActionLink("Заказы", "Orders", "Client")</li>
                        }
                        else if (User.IsInRole("admin"))
                        {
                            <li>@Html.ActionLink("Пользователи", "Users", "Admin")</li>
                        }
                    }
                </ul>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav right">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li>@Html.ActionLink("Войти", "Login", "Account")</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Личный кабинет", "UserInfo", "Account")</li>
                            <li>@Html.ActionLink("Выйти", "Logout", "Account")</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer>
            <p>&copy; @DateTime.Now.Year – Харьков<div class="small">Все права защищены</div></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        $('ul.nav li').each(function () { if (this.getElementsByTagName("a")[0].href == location.href) this.className = "active"; });
    </script>
</body>
</html>
